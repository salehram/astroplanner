# AstroPlanner Environment Configuration Example
# Copy this file to .env and modify the values as needed

# Application Settings
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# Options: sqlite, postgresql
DATABASE_TYPE=sqlite

# SQLite Configuration (default)
# Uses instance/astroplanner.db by default

# PostgreSQL Configuration (when DATABASE_TYPE=postgresql)
# DATABASE_URL=postgresql://username:password@localhost:5432/astroplanner
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=astroplanner
# POSTGRES_USER=astroplanner
# POSTGRES_PASSWORD=your-password

# PostgreSQL Connection Pool Settings
# POSTGRES_POOL_SIZE=10
# POSTGRES_POOL_TIMEOUT=30
# POSTGRES_POOL_RECYCLE=3600

# SQLite Settings
# SQLITE_WAL_MODE=true
# SQLITE_TIMEOUT=30

# Application Features
# NINA_INTEGRATION=true
# BACKUP_RETENTION_DAYS=30

# Cloud Platform Detection (automatically detected if available)
# HEROKU=true
# RAILWAY=true
# RENDER=true

# Security Settings (for production)
# SECURE_SSL_REDIRECT=true
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=strict